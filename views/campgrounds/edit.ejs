
<% include ../partials/header %>

<div class="row">
  <h1 style="text-align:center">Edit <%=Elem.name%></h1>
  <div id="registerforms">
    <form action="/campgrounds/<%=Elem._id%>?_method=PUT" method="post">
      <div class="form-group">
        <input class="form-control" type="text" value="<%=Elem.name%>" name="name">
      </div>
      <div class="form-group">
      <input class="form-control" type="text" value="<%=Elem.img%>" name="imageUrl" >
      </div>
      <div class="form-group">
        <input class="form-control" type="number" value="<%= Elem.price%>" name="price" min ="0.01" step="0.01">
      </div>
      <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="location" id="location" value="<%= Elem.location %>">
      </div>
      <div class="form-group">
        <textarea class="from-control" name="description"><%=Elem.description%></textarea>
      </div>
      <div class="form-group">
      <input class="btn btn-lg btn-primary btn-block"type="submit">
      </div>
    </form>
    <a href="/campgrounds/<%=Elem._id%>">Go Back</a>

  </div>

</div>
<% include ../partials/footer %>
